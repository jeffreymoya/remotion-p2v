# ===================================
# AI Providers
# ===================================

# OpenAI (optional, for legacy support)
OPENAI_API_KEY=

# Gemini (default AI provider - cost-optimized)
GEMINI_API_KEY=

# Anthropic Claude (alternative AI provider)
ANTHROPIC_API_KEY=

# ===================================
# Text-to-Speech (TTS) Providers
# ===================================

# Google Cloud TTS (default - cost-optimized)
GOOGLE_TTS_API_KEY=

# ElevenLabs (optional fallback)
ELEVENLABS_API_KEY=

# ===================================
# Stock Media Providers (free sources)
# ===================================

# Pexels (images & videos)
PEXELS_API_KEY=

# Unsplash (images only)
# Access Key (aka App ID) is required; Secret Key is optional for OAuth flows
UNSPLASH_ACCESS_KEY=
UNSPLASH_APP_ID=
UNSPLASH_SECRET_KEY=

# Pixabay (images, videos & music)
PIXABAY_API_KEY=

# ===================================
# Application Settings
# ===================================

# Fastify curation UI server port
FASTIFY_PORT=3000

# Local music library path (optional)
MUSIC_LIBRARY_PATH=./assets/music-library

# ===================================
# Optional: Remotion Rendering
# ===================================

# Remotion license key (if using pro features)
# REMOTION_LICENSE_KEY=
